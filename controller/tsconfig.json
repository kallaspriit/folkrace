{
  "compilerOptions": {
    "target": "es5",
    "lib": ["es2015", "dom"],
    "rootDirs": ["src", "server"],
    "outDir": "build",
    "moduleResolution": "node",

    "allowSyntheticDefaultImports": true,

    "declaration": false,
    "strict": true,
    "sourceMap": true,
    "pretty": true,
    "forceConsistentCasingInFileNames": true,

    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  }
}
